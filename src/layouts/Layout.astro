---
import "../styles/global.css";
import Breakpoint from "../components/Breakpoint.astro";
import "@fontsource-variable/jetbrains-mono";

interface Props {
  title: string;
}

const { title } = Astro.props;

const isDev = import.meta.env.DEV;

const version = __APP_VERSION__;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="flex flex-col gap-16 bg-[#F5F3F2] px-6 pt-16 font-medium text-stone-800 antialiased selection:bg-lime-300 sm:max-w-md sm:px-12"
  >
    <main class="">
      <slot />
    </main>
    <footer class="border-t border-stone-200 py-8">
      <a
        href="https://github.com/nikitapashinsky/nkta.me/releases"
        target="_blank"
        title="View releases on GitHub"
        class="rounded-lg bg-stone-200 px-2 py-1 font-mono text-sm font-semibold text-stone-400 hover:bg-stone-300 hover:text-stone-800"
        >v&thinsp;{version}
        <span class="font-sans">&UpperRightArrow;</span></a
      >
    </footer>
    {isDev && <Breakpoint />}
  </body>
</html>
<style is:global></style>
