---
const { link, title, subtitle } = Astro.props;
---

<a
	href={link}
	target="_blank"
	class="group flex select-none gap-3 rounded-lg pb-3 pl-2 pr-3 pt-2 text-sm hover:bg-neutral-100 dark:hover:bg-neutral-900"
>
	<slot />
	<div class="flex flex-col">
		<span
			class="font-medium leading-[24px] text-neutral-700 group-hover:text-neutral-900 dark:text-neutral-300 dark:group-hover:text-neutral-100"
		>
			{title}
		</span>
		<span
			class="text-neutral-500 group-hover:text-neutral-700 dark:text-neutral-500 dark:group-hover:text-neutral-400"
		>
			{subtitle}
		</span>
	</div>
</a>
