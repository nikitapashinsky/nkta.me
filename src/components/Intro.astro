---
import Layout from "../layouts/Layout.astro";
import EmailButton from "./EmailButton.astro";
---

<Layout>
  <h1>Nikita Pashinsky</h1>
  <p>
    I'm a designer and developer focused on crafting beautiful and intuitive
    interfaces.
  </p>
  <div class="links">
    <div class="link-email">
      <a href="mailto:n@nkta.me">Email<span>↗</span></a>
      <div class="divider"></div>
      <EmailButton />
    </div>
    <a href="https://bsky.app/profile/nkta.me" target="_blank"
      >Bluesky<span>↗</span></a
    >
    <a href="https://figma.com/@nkta" target="_blank">Figma<span>↗</span></a>
    <a href="https://github.com/nikitapashinsky" target="_blank"
      >GitHub<span>↗</span></a
    >
    <a href="https://www.linkedin.com/in/nkta/" target="_blank"
      >LinkedIn<span>↗</span></a
    >
  </div>
</Layout>

<style>
  @keyframes slide-in {
    from {
      translate: 0 48px;
      opacity: 0;
      -webkit-filter: blur(5px);
    }

    to {
      translate: 0 0;
      opacity: 1;
      -webkit-filter: blur(0px);
    }
  }

  h1 {
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: -0.01em;

    opacity: 0;
    animation: 1s 200ms slide-in cubic-bezier(0.32, 0.72, 0, 1) forwards;
  }

  p {
    margin-top: 0.375rem;
    max-width: 400px;

    font-size: 1rem;
    letter-spacing: -0.01em;

    color: var(--text-secondary);

    opacity: 0;
    animation: 1s 300ms slide-in cubic-bezier(0.32, 0.72, 0, 1) forwards;
  }

  .links {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    font-size: 0.875rem;

    > a,
    > .link-email {
      opacity: 0;
      animation: 1s slide-in cubic-bezier(0.32, 0.72, 0, 1) forwards;
    }

    .link-email {
      animation-delay: 400ms;
    }

    a {
      padding: 2px 8px;
      align-self: flex-start;
      text-decoration: none;
      color: var(--text-secondary);
      border-radius: 6px;
      background-color: var(--bg-tertiary);
      transition:
        color 180ms ease,
        background-color 180ms ease,
        scale 180ms ease;

      &:nth-child(2) {
        animation-delay: 500ms;
      }

      &:nth-child(3) {
        animation-delay: 600ms;
      }

      &:nth-child(4) {
        animation-delay: 700ms;
      }

      &:nth-child(5) {
        animation-delay: 800ms;
      }

      > span {
        display: inline-block;
        margin-left: 0.375rem;
        color: var(--text-tertiary);
        transition:
          color 180ms ease,
          transform 180ms ease;
      }

      &:active {
        scale: 0.95;
      }

      &:focus-visible {
        outline: 1px solid var(--text-secondary);
      }

      @media (hover: hover) {
        &:hover {
          color: var(--text-primary);
          background-color: var(--bg-tertiary-hover);

          > span {
            transform: translate(2px, -2px);
            color: var(--text-secondary);
          }
        }
      }
    }
  }

  .link-email {
    display: flex;

    .divider {
      display: block;
      width: 1px;
      background-color: var(--color-border);
    }

    a {
      position: relative;
      border-radius: 6px 0 0 6px;
    }

    button {
      border-radius: 0 6px 6px 0;
    }
  }
</style>
