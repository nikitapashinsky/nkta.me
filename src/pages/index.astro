---
import '../styles/styles.css';
import Layout from '../layouts/Layout.astro';
import Intro from '../components/Intro.astro';
---

<Layout>
	<main class:list={['flex flex-col', 'lg:block lg:flex-1']}>
		<Intro />
		<div class:list={['work', 'flex flex-col gap-6 p-6', 'lg:pl-86']}>
			<video autoplay loop muted playsinline src="/videos/select-touchpoint.mp4"></video>
			<video autoplay loop muted playsinline src="/videos/audience-estimate.mp4"></video>
			<video autoplay loop muted playsinline src="/videos/sidebar-icon.mp4"></video>
		</div>
	</main>
</Layout>

<style>
	@keyframes slide-in {
		from {
			transform: translateY(48px);
			opacity: 0;
			filter: blur(5px);
		}

		to {
			transform: translateY(0);
			opacity: 1;
			filter: blur(0px);
		}
	}

	.work {
		> * {
			opacity: 0;
			animation: 1s 850ms slide-in cubic-bezier(0.32, 0.72, 0, 1) forwards;

			&:nth-child(2) {
				animation-delay: 1050ms;
			}

			&:nth-child(3) {
				animation-delay: 1250ms;
			}
		}
	}
</style>
