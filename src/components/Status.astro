---
const { class: className, ...rest } = Astro.props;
---

<div class:list={["email", className]} {...rest}>
  <div class="status">
    <div class="dot"></div>
    <p>I'm currently open to work.</p>
  </div>
  <a href="mailto:n@nkta.me" class="email-button">Get in touch</a>
</div>

<style>
  .email {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 2rem;
    gap: 0.875rem;
    background: rgb(0 0 0 / 0.03);
    border-radius: 12px;
    padding: 1rem 0.5rem 0.5rem;

    @media (min-width: 440px) {
      flex-direction: row;
      justify-content: space-between;
      border-radius: 99px;
      padding: 0.5rem;
      padding-left: 1.25rem;
    }

    .status {
      flex-grow: 0;
      display: flex;
      align-items: center;
      gap: 0.875rem;

      p {
        font-size: 0.875rem;
        font-weight: 450;
        margin-top: 0;
        color: var(--text-primary);
      }

      .dot {
        display: block;
        border-radius: 99px;
        width: 6px;
        height: 6px;
        background: #46a758;
      }

      @media (min-width: 440px) {
      }
    }

    a {
      display: block;
      width: 100%;
      user-select: none;
      padding: 0.375rem 0.75rem;
      border-radius: 8px;
      text-align: center;
      font-size: 0.875rem;
      font-weight: 450;
      text-decoration: none;
      background: linear-gradient(to bottom, hsl(0 0% 100%), hsl(0 0% 99%));
      box-shadow:
        inset 0 -5px 3px -2px transparent,
        0 0 0 1px rgb(0 0 0 / 0.03),
        0 2px 1px rgb(0 0 0 / 0.03),
        0 3px 8px rgb(0 0 0 / 0.05),
        0 8px 12px -1px transparent;
      color: rgb(0 0 0 / 0.8);
      transition: all 180ms ease;

      @media (min-width: 440px) {
        width: auto;
        border-radius: 99px;
      }

      &:hover {
        background: linear-gradient(to bottom, hsl(0 0% 100%), hsl(0 0% 98%));
        color: rgb(0 0 0 / 0.95);
        box-shadow:
          inset 0 -5px 3px -2px rgb(255 255 255 / 0.9),
          0 0 0 1px rgb(0 0 0 / 0.04),
          0 2px 1px rgb(0 0 0 / 0.04),
          0 4px 10px rgb(0 0 0 / 0.05),
          0 8px 12px -1px rgb(0 0 0 / 0.015);
      }

      &:active {
        scale: 0.985;
        translate: 0 0;
      }
    }
  }
</style>
