---
import { Icon } from 'astro-icon/components';
import CopyEmail from '../components/CopyEmail.astro';
import { Image } from 'astro:assets';
import SocialLink from '../components/SocialLink.astro';
import { socials } from '../data/contact';
import pfp from '../images/me-288px-2.jpeg';
import Layout from '../layouts/BaseLayout.astro';
---

<Layout pageTitle="Nikita Pashinsky">
	<div class="flex flex-col gap-16">
		<div
			class="flex max-w-md flex-col gap-4 font-serif text-2xl leading-snug tracking-tight md:text-3xl"
		>
			<h1>Hi&thinsp;â€”&thinsp;thanks for stopping by.</h1>
			<p>
				I'm <Image
					src={pfp}
					width={28}
					densities={[1.5, 2, 3]}
					class="-mr-px -mt-1 ml-1 inline rounded-full"
					alt="That's me!"
				/>&nbsp;Nikita, a designer focused on crafting beautiful software.
			</p>
			<p>
				Currently <Icon name="WorkBadge" />&nbsp;Product Designer at&nbsp;<a
					href="https://piano.io"
					target="_blank"
					class="decoration-2 underline-offset-[4px]">Piano</a
				>, based in <Icon name="Location" />&nbsp;Amsterdam.
			</p>
		</div>
		<div class="-ml-3 flex max-w-[29rem] flex-col">
			{
				socials.map(({ icon, link, title, handle }) => {
					if (icon === 'Email') {
						return (
							<div class="flex grow items-center gap-2">
								<SocialLink {icon} {link} {title} {handle} />
								<CopyEmail />
							</div>
						);
					}
					return <SocialLink {icon} {link} {title} {handle} />;
				})
			}
		</div>
	</div>
</Layout>

<style>
	@reference "tailwindcss";

	[data-icon='WorkBadge'] {
		@apply -ml-[2px] -mr-1 -mt-[5px] inline text-cyan-500 dark:text-cyan-400;
	}

	[data-icon='Location'] {
		@apply -mr-1 -mt-1 inline text-blue-600 dark:text-blue-500;
	}
</style>
