---
const { link, title, subtitle } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="group flex gap-3 rounded-lg pb-3 pl-2 pr-3 pt-2 text-sm font-medium hover:bg-stone-200"
>
  <slot />
  <div class="flex flex-col">
    <span class="leading-[24px] text-stone-600 group-hover:text-stone-800"
      >{title}</span
    >
    <span class="text-stone-500 group-hover:text-stone-600">{subtitle}</span>
  </div>
</a>
