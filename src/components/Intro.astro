---
import Layout from "../layouts/Layout.astro";
import Links from "./Links.astro";
---

<Layout>
  <h1>Nikita Pashinsky</h1>
  <p>
    I'm a designer and developer focused on crafting beautiful and intuitive
    interfaces.
  </p>
  <Links class="slideIn-links" />
</Layout>

<style>
  h1 {
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: -0.01em;

    opacity: 0;
    animation: 1s 200ms slide-in cubic-bezier(0.32, 0.72, 0, 1) forwards;
  }

  p {
    margin-top: 0.375rem;
    max-width: 400px;

    font-size: 1rem;
    letter-spacing: -0.01em;

    color: var(--text-secondary);

    opacity: 0;
    animation: 1s 300ms slide-in cubic-bezier(0.32, 0.72, 0, 1) forwards;
  }

  .slideIn-status {
    opacity: 0;
    animation: 1s 400ms slide-in cubic-bezier(0.32, 0.72, 0, 1) forwards;
  }

  @keyframes slide-in {
    from {
      translate: 0 48px;
      opacity: 0;
      -webkit-filter: blur(5px);
    }

    to {
      translate: 0 0;
      opacity: 1;
      -webkit-filter: blur(0px);
    }
  }

  pre {
    color: white;
  }

  .slideIn-links {
    > * {
      opacity: 0;
      animation: 1s 500ms slide-in cubic-bezier(0.32, 0.72, 0, 1) forwards;

      &:nth-child(2) {
        animation-delay: 600ms;
      }

      &:nth-child(3) {
        animation-delay: 700ms;
      }

      &:nth-child(4) {
        animation-delay: 800ms;
      }

      &:nth-child(5) {
        animation-delay: 900ms;
      }

      &:nth-child(6) {
        animation-delay: 1000ms;
      }
    }
  }
</style>
