---
import Layout from "../layouts/Layout.astro";
import EmailButton from "./EmailButton.astro";
---

<Layout>
  <h1>Nikita Pashinsky</h1>
  <p>
    I'm a designer and developer focused on crafting beautiful and intuitive
    interfaces.
  </p>
  <div class="links">
    <div class="link-email">
      <a href="mailto:nikitapashinsky@gmail.com">Email<span>↗</span></a>
      <div class="divider"></div>
      <EmailButton />
    </div>
    <a href="https://bsky.app/profile/nkta.me" target="_blank"
      >Bluesky<span>↗</span></a
    >
    <a href="https://figma.com/@nkta" target="_blank">Figma<span>↗</span></a>
    <a href="https://github.com/nikitapashinsky" target="_blank"
      >Github<span>↗</span></a
    >
    <a href="https://www.linkedin.com/in/nkta/" target="_blank"
      >LinkedIn<span>↗</span></a
    >
  </div>
</Layout>

<style>
  h1 {
    font-size: 1.25rem;
    font-weight: 500;
    letter-spacing: -0.01em;
  }

  p {
    margin-top: 0.375rem;
    max-width: 400px;

    font-size: 1.25rem;
    letter-spacing: -0.01em;

    color: var(--text-secondary);
  }

  .links {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;

    a {
      padding: 2px 8px;
      align-self: flex-start;
      text-decoration: none;
      color: var(--text-secondary);
      border-radius: 6px;
      background-color: var(--bg-tertiary);
      transition:
        color 180ms ease,
        background-color 180ms ease,
        scale 180ms ease;

      > span {
        display: inline-block;
        margin-left: 0.375rem;
        color: var(--text-tertiary);
        transition:
          color 180ms ease,
          transform 180ms ease;
      }

      &:active {
        scale: 0.95;
      }

      &:focus-visible {
        outline: 1px solid var(--text-secondary);
      }

      @media (hover: hover) {
        &:hover {
          color: var(--text-primary);
          background-color: var(--bg-tertiary-hover);

          > span {
            transform: translate(2px, -2px);
            color: var(--text-secondary);
          }
        }
      }
    }
  }

  .link-email {
    display: flex;

    .divider {
      display: block;
      width: 1px;
      background-color: var(--color-border);
    }

    a {
      position: relative;
      border-radius: 6px 0 0 6px;
    }

    button {
      border-radius: 0 6px 6px 0;
    }
  }
</style>
