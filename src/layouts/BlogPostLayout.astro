---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';

type Props = CollectionEntry<'blog'>['data'];
const { title, date } = Astro.props;
---

<BaseLayout pageTitle={title}>
	<nav class="mb-8">
		<a
			href="/"
			class="-ml-2 flex max-w-min items-baseline gap-2 rounded-lg px-2 py-1 text-sm text-neutral-500 transition-all duration-150 hover:bg-neutral-100 hover:text-neutral-900 active:scale-95 active:bg-neutral-100 active:text-neutral-900 dark:hover:bg-neutral-800 dark:hover:text-neutral-100 dark:active:bg-neutral-800 dark:active:text-neutral-100"
		>
			Back
		</a>
	</nav>
	<header class="mb-8 flex flex-col gap-2">
		<h1 class="text-2xl font-medium leading-snug tracking-tight">
			{title}
		</h1>
		<time datetime={date.toISOString()} class="text-sm text-neutral-500">
			{
				date.toLocaleDateString('en-us', {
					year: 'numeric',
					month: 'long',
					day: 'numeric',
				})
			}
		</time>
	</header>
	<article class="prose prose-neutral dark:prose-invert">
		<slot />
	</article>
</BaseLayout>
